# Empty line
- Ctrl-C : "^C\n" + new prompt
- Ctrl-D : "exit\n" + exit bash
- Ctrl-\ : Does nothing

# Filled line
- Ctrl-C : "^C\n" + new prompt
- Ctrl-D : Does nothing
- Ctrl-\ : Does nothing

# `$ cat` or `$ grep`
- Ctrl-C : exit cmd + "^C\n" + new prompt
- Ctrl-D : exit cmd + "\n" + new prompt
- Ctrl-\ : "^\Quit (core dumped)\n" + new prompt

# `$ sleep 3000`
- Ctrl-C : Exit cmd + "^C\n" + new prompt
- Ctrl-D : Does nothing
- Ctrl-\ : "^\Quit (core dumped)\n" + new prompt

